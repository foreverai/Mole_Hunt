###:kivy 1.7.2
###Give widgets ids to allow them 
###to be manipulated on events 
###and in kv file and in the py file
	
###Creates label with common properties, so everything doesn't need retyped	
<DisplayScore@Label>        
	font_size: 30

<DisplayText@Label>
	font_size: 40	
				
<Mole>
	canvas.before:
		Color:
			rgba: 0.5, 0, 0, 1
		Rectangle:
			source: 'Images/mole.png'
			size: self.size
			pos: self.pos
	
<StartPopUp>			
    size_hint: .2, .2
    auto_dismiss: False
    title: 'Welcome'
    Button:
        text: 'Play'
        on_press: root.start_click()
        on_press: root.dismiss()   

<Controller>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos
       
	BoxLayout:
		orientation: 'vertical'
		size: root.size					
		
		###Contains the display labels
		BoxLayout:							
			orientation: 'horizontal'
			size_hint: 1, 0.2
			
			GridLayout: 
				cols: 3
				
				DisplayText:
					text: 'Score'					
				DisplayText:
					text: 'High Score'					
				DisplayText:
					text: 'Time'						          	
				DisplayScore:
					text: str(root.score_label)					
				DisplayScore:
					text: str(root.high_score_label)					
				DisplayScore: 
					text: str(root.time_label)
		
		###Displays the game box
		FloatLayout:				
			canvas.before:
		        Color:
		            rgba: 0.702, 0.957, 0.988, 1
		            
		        Rectangle:
		            pos: self.pos
		            size: self.size		    	
		    	             
		    Mole:	
		    	size_hint: .1, .175
		    	pos_hint: {'center_x': .5, 'center_y': .5}	
